<div class="ui link cards">
  <% @listings.each do |listing| %>
  <div class="card">
    <div class="image">
      <%= image_tag listing.image.url(:medium) %>
    </div>
    <div class="content">
      <div class="header"><%= listing.title %></div>
      <div class="description">
        <%= listing.description %>
      </div>
    </div>
    <div class="extra content">
      <span class="right floated">
        Ends at ...
      </span>
      <span>
        <i class="hand paper outline icon"></i>
        x Bids
      </span>
    </div>
  </div>
  <% end %>
</div>