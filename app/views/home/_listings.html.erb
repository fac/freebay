<div class="ui link cards">
  <% @listings.each do |listing| %>
    <%= link_to listing_path(listing), class: "ui card" do %>
      <div class="image">
        <%= image_tag listing.image.url(:medium) %>
      </div>
      <div class="content">

        <div class="header"><%= listing.title %></div>
        <div class="meta">
        <% unless listing.bids.empty? %>
          Offers over <%= number_to_currency listing.current_price %>
        <% else %>
          Starting price <%= number_to_currency listing.starting_price %>
        <% end %>

        <br>
        </div>
      </div>

      <div class="extra content">
        <div class="meta">
        <%= listing_category_tag(listing) %> <%= listing_conditon_tag(listing) %>
      </div>
      </div>

      <div class="extra content">
        <span class="right floated">
          <%= humanized_end_time(listing) %>
        </span>
        <span>
          <i class="hand paper outline icon"></i>
          <%= pluralize listing.bids.count, 'Bid' %>
        </span>
      </div>
    <% end %>
  <% end %>
</div>
