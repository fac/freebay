<div class="row bg-white mt-4">
  <div class="btn-group py-3 border" role="group" aria-label="Categories">
    <div class="btn-group" role="group">
      <button id="category" type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        <%= humanized_category(params[:category]) %>
      </button>
      <ul class="dropdown-menu" aria-labelledby="category">
        <% categories_options_for_select.each do |name, category| %>
        <li>
          <%= link_to name, root_path(category: category, condition: params[:condition]), class: "dropdown-item" %>
        </li>
        <% end %>
      </ul>
    </div>

    <div class="btn-group ms-2" role="group">
      <button id="condition" type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        <%= humanized_condition(params[:condition]) %>
      </button>
      <ul class="dropdown-menu" aria-labelledby="condition">
        <% conditon_options_for_select.each do |name, condition| %>
        <li>
          <%= link_to name, root_path(condition: condition, category: params[:category]), class: "dropdown-item" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="row mt-3">
  <% if @listings.empty? %>
    <p>There are no auctions. Come back soon!</p>
  <% else %>
    <%= render 'listings' %>
  <% end %>
</div>