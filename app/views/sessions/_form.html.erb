<%= form_for :session, url: session_path, html: { class: "ui form" } do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', placeholder: "you@example.com" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "Log in", class: "ui primary button" %>

  <div class="ui message">
    <% if Clearance.configuration.allow_sign_up? %>
      <p>
        Not registered? <%= link_to "Sign up", sign_up_path %>
      </p>
    <% end %>
    <p>
      <%= link_to "Forgotten password?", new_password_path %>
    </p>
  </div>
<% end %>
