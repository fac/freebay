<%= form_for @user do |form| %>
  <%= form.label :first_name, class: "form-label" %>
  <%= form.text_field :first_name, class: "form-control mb-2" %>

  <%= form.label :last_name, class: "form-label" %>
  <%= form.text_field :last_name, class: "form-control mb-2" %>

  <%= form.label :email, "Email" %>
  <%= form.text_field :email, type: 'email', placeholder: 'you@example.com', class: "form-control mb-2" %>

  <%= form.label :password, "Password" %>
  <%= form.password_field :password, class: "form-control mb-2" %>

  <div class="mt-3">
    <%= form.submit "Sign up", class: "btn btn-primary w-100" %>
  </div>

  <div class="mt-2">
    Already got an account? <%= link_to "Sign in â†’", sign_in_path %>
  </div>
<% end %>
