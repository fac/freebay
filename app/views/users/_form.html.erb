<%= form_for @user, html: { class: "ui form" } do |form| %>
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', placeholder: 'you@example.com' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "Sign up", class: "ui primary button"  %>
<% end %>

<div class="ui message">
  <p>
    Have an account? <%= link_to "Sign in", sign_in_path %>
  </p>
</div>
