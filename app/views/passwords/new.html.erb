<div id="clearance" class="password-reset">
  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <strong><%= form.label :email, "Email", class: "form-label" %></strong>
    <%= form.text_field :email, type: 'email', class: "form-control", style: "max-width: 18rem;" %>

    <%= form.submit "Reset Password", class: "btn btn-primary mt-3" %>
  <% end %>
</div>
